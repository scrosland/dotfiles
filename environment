#
# vim: set filetype=sh:
#
# Environment
#

BROWSER='google-chrome' ; export BROWSER
EDITOR='vim' ; export EDITOR
LESS='Xm' ; export LESS
VISUAL="$EDITOR" ; export VISUAL

add_to_path()
{
  dir="$1"
  if [ -d ${dir} ] ; then
    echo ":$PATH:" | egrep -q ":${dir}:"
    if [ $? -ne 0 ] ; then
      PATH=${dir}:$PATH
      export PATH
    fi
  fi
}

add_to_path /Applications/SCM.app/Contents/Resources/scm/bin
add_to_path /Users/Shared/scripts
add_to_path $HOME/bin
