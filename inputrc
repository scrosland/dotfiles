set editing-mode vi
$if mode=vi
  set keymap vi-insert
$endif

set bell-style visible
set prefer-visible-bell on

$if Bash
Control-p: menu-complete
  
# Home, End, C-left arrow, C-right arrow
# xterm style
"\e[H": beginning-of-line
"\e[F": end-of-line
"\e[1;5D": backward-word
"\e[1;5C": forward-word
# PuTTY style
"\e[1~": beginning-of-line
"\e[4~": end-of-line
"\eOD": backward-word
"\eOC": forward-word

$endif
