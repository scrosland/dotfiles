# vim: set filetype=sh: 
# 
# Simply source all the individual scripts
#
for script in environment functions shrc ; do
    # source the common file
    . "$HOME/dotfiles/${script}"

    # source the .local file for system-specific settings
    lcl="$HOME/.${script}.local"
    if [ -r "${lcl}" ] ; then
        . "${lcl}"
    fi
done
